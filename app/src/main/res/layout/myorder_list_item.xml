<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>
        <variable
            name="order"
            type="com.example.hungry.myorder.model.Order" />
    </data>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    app:cardElevation="@dimen/dp_5"
    app:cardBackgroundColor="@color/white"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:orientation="horizontal">



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/food_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_5"
            app:imageUrl="@{order.imagPath}"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/food_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:text="@{order.hotelName}"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:layout_marginLeft="@dimen/dp_10"
                app:bindcreatedAt="@{order}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:layout_marginLeft="@dimen/dp_10"
                app:orderstatus="@{order.status}"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_12" />


        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:visibility='@{order.deliveryBoyStatus.equalsIgnoreCase("NOTASSIGN")?View.GONE:View.VISIBLE}'
            android:layout_toLeftOf="@+id/name"
            android:layout_above="@+id/view1"
            android:layout_marginBottom="@dimen/dp_10"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_marginRight="18dp"
            android:maxLength="20"
            android:layout_above="@+id/view1"
            android:textSize="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_10"
            android:visibility='@{order.deliveryBoyStatus.equalsIgnoreCase("NOTASSIGN")?View.GONE:View.VISIBLE}'
            android:text='@{order.fName+" "}'
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:layout_marginStart="0dp"
            android:layout_below="@+id/food_img"
            android:background="@color/grey" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/itemlist"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <View
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingLeft="@dimen/dp_10"

                android:weightSum="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_12"
                    android:text="Total                        "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/black"
                    android:text='@{"RS "+order.total}'/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <Button
                android:id="@+id/rateorder"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/updateborder"
                android:layout_gravity="center"
                android:text="Rate order"
                android:visibility='@{(order.status.equalsIgnoreCase("DELIVERED") &amp;&amp; order.feedback.equalsIgnoreCase(""))?View.VISIBLE:View.GONE}'
                android:layout_marginBottom="@dimen/dp_5"
                android:textAllCaps="false"
                android:textColor="@color/DarkGreen"
                android:textSize="@dimen/dp_14"
                android:textStyle="normal" />
            <Button
                android:id="@+id/trackorder"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/updateborder"
                android:layout_gravity="center"
                android:text="Track Order"
                android:visibility='@{order.status.equalsIgnoreCase("DELIVERED")?View.GONE:View.VISIBLE}'
                android:layout_marginBottom="@dimen/dp_5"
                android:textAllCaps="false"
                android:textColor="@color/DarkGreen"
                android:textSize="@dimen/dp_14"
                android:textStyle="normal" />

        </LinearLayout>


    </RelativeLayout>




</androidx.cardview.widget.CardView>
</layout>

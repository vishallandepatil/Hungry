<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/dp_5"
    android:layout_margin="@dimen/dp_5"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <RelativeLayout
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:id="@+id/food_imgll"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="@dimen/dp_5">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/food_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="@dimen/dp_5"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />
        <ImageView
            android:id="@+id/selectedgreeting"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_centerInParent="true"
            android:src="@drawable/loader_newrelease"
            android:background="@null"
            android:elevation="2dp"
            />
    </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@+id/food_imgll"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:hint="Hotel Prasad"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/id_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:hint="Indiam"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_2"
                android:ellipsize="end"
                android:maxLength="20"
                android:hint="Aurangabad Roaddncncnxmncmnxmnc"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/dp_12" />


        </LinearLayout>

        <ImageView
            android:id="@+id/ivVeg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/vegimg" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="-5dp"
            android:max="5"
            android:rating="2.5"
            android:scaleX="0.3"
            android:scaleY="0.3" />


        <TextView
            android:id="@+id/discout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ratingBar"
            android:background="@drawable/button_border"
            android:padding="@dimen/dp_5"
            android:text="10 % off"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12"
            android:textStyle="italic"
            android:visibility="visible" />


        <TextView
            android:id="@+id/id_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/discout"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/dp_5"
            android:padding="@dimen/dp_5"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/dp_12" />


    </RelativeLayout>




</androidx.cardview.widget.CardView>


